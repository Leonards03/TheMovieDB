<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_navigation"
    app:startDestination="@id/navigation_movie">

    <fragment
        android:id="@+id/navigation_movie"
        android:name="com.leonards.tmdb.app.home.movie.MovieFragment"
        android:label="@string/nav_movie"
        tools:layout="@layout/fragment_movie" />

    <fragment
        android:id="@+id/navigation_tv_show"
        android:name="com.leonards.tmdb.app.home.tvshow.TvShowFragment"
        android:label="@string/nav_tv_show"
        tools:layout="@layout/fragment_tv_show" />

    <fragment
        android:id="@+id/navigation_favorite"
        android:name="com.leonards.tmdb.favorite.ui.FavoriteContainerFragment"
        android:label="@string/nav_favorite"
        app:moduleName="The_Movie_DB.favorite"
        tools:layout="@layout/fragment_favorite" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.leonards.tmdb.app.home.settings.SettingsFragment"
        android:label="@string/nav_settings" />
</navigation>